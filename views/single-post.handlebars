<div class="h-full sm:h-full bg-gradient-to-t from-slate-400 to-slate-800 p-4">


  <div class="post-container w-7/12 md:w-8/12 mx-auto bg-slate-300 rounded-xl drop-shadow-lg px-4 py-2">
    <div>
   <h1 class="text-4xl font-bold text-center text-slate-700 pb-2">{{post.title}}</h1>
    </div>
    <div>
      {{#if post.img}}

        <img src="data:image/png;base64,{{post.img}}" alt="img_content" />
        
      {{/if}}

      <p class="py-3">{{post.content}}</p>
        <h2 class="post-header font-semibold md:text-lg mt-6">{{post.user.username}}</h2>

    </div>
    </div>
    
    <div class="discussion-container w-11/12 md:w-8/12 text-center mx-auto bg-slate-300 rounded-xl px-4 text-xl font-bold drop-shadow-lg pb-4 my-2">Discussions 
        {{#each post.comments as |comment|}}
        <div class="border-2 border-slate-900 mb-3 rounded-xl">
          {{> comments comment}}
        </div>
        {{/each}}

  
  {{#if loggedIn}}
<div>
        <form id="comment-form">
        <p>Leave comment: </p>
        <textarea class="w-full font-normal" name="comment-body" id="comment" cols="50" rows="6"></textarea>
        <div>
       <button class="btn rounded-xl bg-slate-600 text-white" id="comment-btn" type="submit">Submit</button>
       </div>
    </form>
</div>
{{/if}}
</div>

</section>

<script src="/js/comment.js"></script>

