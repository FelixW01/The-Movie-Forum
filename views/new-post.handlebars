<div>
  <div>
    <div><h2>Your Dashboard</h2></div>
  </div>
  <section>
    <form id="post-create-form">
      <div>
        <h2>Create New Post</h2>
      </div>
      <div>
        <label for="movies">Choose a Movie:</label>
        <select id="movies" name="movies">
          {{#each movies as |movie|}}

            {{> movie-selection movie}}

          {{/each}}
        </select>
        <h3>Title</h3>
        <textarea name="title" id="title" cols="200" rows="2"></textarea>
        <h3>Content</h3>
        <textarea name="content" id="content" cols="200" rows="5"></textarea>
        <h3>Image</h3>
        <input type="file" id="image" name="postImage" />
        <div>
          <button
            class="btn btn-secondary btn-lg w-100 mt-4 p-6"
            type="button"
          >Create</button>
        </div>
      </div>
    </form>
  </section>
</div>

<script src="/js/newpost.js"></script>